{% case media.media_type %} 
  {% when "image" %}
    <img src="{{ media | img_url: 'medium' }}" alt="{{ media.preview_image.alt }}" />
  {% when "video" %}
    {{ media | video_tag }}
  {% when "external_video" %}
  {{ media | external_video_tag class: 'w-full h-80 object-cover'}}
  {% else %}
    {{ media | media_tag controls: true class: 'w-full h-full object-cover'}}
{% endcase %}
